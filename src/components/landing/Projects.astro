---
import project from "../../config/project.json";
---

<h1 class="font-bold text-5xl my-8 text-center">Projects</h1>

{
  project.map((project) => (
    <div class="flex flex-col text-center md:text-left md:flex-row">
      <div class="flex-1 p-4">
        <h2 class="font-bold text-2xl my-4 ">{project.title}</h2>
        <p class="my-2">{project.description}</p>
        <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400 roundedx">More Info</button>
      </div>
      <div class="flex-1 items-center my-4">
        <img src={project.image} class="w-72 m-auto" />
      </div>
    </div>
  ))
}
